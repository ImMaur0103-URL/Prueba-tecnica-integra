@model IEnumerable<Prueba_Tecnica_Integra.Models.T_PROVEEDOR>

@{
    ViewData["Title"] = "Gestión de Proveedores";
}

<div class="container">
    <h1>Gestión de Proveedores</h1>
    <button id="addSupplierBtn" class="btn">Agregar Proveedor</button>
    <div class="search-box">
        <input type="text" id="searchInput" placeholder="Buscar por nombre o NIT...">
    </div>
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>NIT</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Grupo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody id="supplierTableBody">
            @foreach (var supplier in Model)
            {
                <tr class="border-b">
                    <td class="px-4 py-2">@supplier.Nombre</td>
                    <td class="px-4 py-2">@supplier.NIT</td>
                    <td class="px-4 py-2">@supplier.Telefono</td>
                    <td class="px-4 py-2">@supplier.Correo</td>
                    <td class="px-4 py-2">
                        <span class="badge @("bg-" + supplier.GrupoProveedor)">
                            @supplier.GrupoProveedor?.Descripcion
                        </span>
                    </td>
                    <td class="px-4 py-2">
                        <div class="flex space-x-2">
                            <button class="btn btn-outline btn-sm" data-id="@supplier.ID">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit h-4 w-4 mr-2" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                    <path d="M9 7h-5a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-5" />
                                    <path d="M9 15v4h4l9 -9a2.1 2.1 0 0 0 -3 -3l-10 10" />
                                    <line x1="16" y1="5" x2="19" y2="8" />
                                </svg>
                                Editar
                            </button>
                            <button class="btn btn-outline btn-sm" data-id="@supplier.ID">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash h-4 w-4 mr-2" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                    <line x1="4" y1="7" x2="20" y2="7" />
                                    <line x1="10" y1="11" x2="10" y2="17" />
                                    <line x1="14" y1="11" x2="14" y2="17" />
                                    <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                                    <path d="M9 7v-3h6v3" />
                                </svg>
                                Eliminar
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#searchInput').on('keyup', function () {
                var value = $(this).val().toLowerCase();
                $("#supplierTableBody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}